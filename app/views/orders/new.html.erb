<h1>Checkout</h1>
<p>Number of order_items in cart:</p>

<%= simple_form_for @order do |f| %>
  <fieldset>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
  </fieldset>

  <fieldset>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :postal_code %>
    <%= f.input :country, priority: ['United Kingdom'] %>
  </fieldset>

  <fieldset>
    <div id="card"></div>
  </fieldset>

  <!-- Used to display Element errors. -->
  <div id="card-errors" role="alert">
    <% @order.errors[:stripe_token].each do |message| %>
      <p class="error"><%= message %></p>
    <% end %>
  </div>

  <%= f.button :submit, "Pay for your flowers!" %>
<% end %>

<!-- Stripe's front-end JavaScript -->
<script>
// Link to stripe API keys
var stripe = Stripe('<%= Rails.application.credentials.stripe_public_key_test %>');

var elements = stripe.elements({
  fonts: [{cssSrc: 'https://fonts.googleapis.com/css?family=Roboto'}]
});

// Create card element
var card = elements.create("card", {
  // Card styling here
  hidePostalCode: true
})

// Mount the card to the form
card.mount("#card")

$("form.new_order").on("submit", function (ev) {
  ev.preventDefault()
  stripe.createToken(card).then(function (result) {
    if (result.error) {
      $("#card-errors").html(result.error.message)
    } else {
      $("form.new_order").append("<input type=hidden name='order[stripe_token]' value=" + result.token.id + ">")
      $("form.new_order").get(0).submit()
    }
  })
})
</script>
